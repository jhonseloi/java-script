<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-log-2"></div>
        <div class="col-log-8 my-3">
            <h1 class="text-center">Agenda</h1>
            <% if(contatos.length > 0) { %>
            <p class="text-center lead">Seus contatos estão abaixo.</p>
            <% } else { %>
            <p class="text-center lead text-danger">Não existem contatos cadastrados na agenda.</p>
            <% } %>

            <%- include('includes/messages') %>
            
            <% if(contatos.length > 0) { %>
            <div class="responsive-table">
                <table class="table">
                    <% contatos.forEach(contato => { %>
                    <tr>
                        <td><%= contato.nome %></td>
                        <td><%= contato.sobrenome %></td>
                        <td><%= contato.telefone %></td>
                        <td><%= contato.email %></td>
                        <td><a href="/home/contato/<%= contato._id %>">Editar</a></td>
                        <td><a class="text-danger" href="/home/contato/delete/<%= contato._id %>">Excluir</a></td>
                    </tr>
                    <% }) %>
                </table>
            </div>
            <% } %>
        </div>
        <div class="col-log-2"></div>
    </div>
</div>

<%- include('includes/footer') %>